@model IEnumerable<MC1000.Models.DeliverySlot>

@{
    ViewData["Title"] = "Bezorgdatum";
}

<h1>Bezorgdatum overzicht</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Bezorgdatum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                <td>
                    <a class="btn btn-outline-danger btn-xs" asp-action="TimeSlot" asp-route-id="@item.Id">Kies deze dag</a>
                </td>
            </tr>
        }
    </tbody>
</table>