@model MC1000.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Bestelling</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bestelling geplaatst op
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePlaced)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Tijd van levering
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliverySlot.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        @if (Model.OrderLines != null)
        {
            <h4>Bestelde producten</h4>

            @foreach (var item in Model.OrderLines)
            {

                <dt class="col-sm-2">
                    Product
                </dt>
                <dd class="col-sm-10">
                    @item.Product.Title
                </dd>
                <dt class="col-sm-2">
                    Merk
                </dt>
                <dd class="col-sm-10">
                    @item.Product.Brand
                </dd>
                <dt class="col-sm-2">
                    Prijs
                </dt>
                <dd class="col-sm-10">
                    @item.Product.Price
                </dd>
                <dt class="col-sm-2">
                    Aantal
                </dt>
                <dd class="col-sm-10">
                    @item.Amount
                </dd>
            }
        }
        else
        {
            <p>Geen producten gevonden voor deze bestelling.</p>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Terug</a>
</div>