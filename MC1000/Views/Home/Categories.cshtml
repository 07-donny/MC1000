@model IEnumerable<MC1000.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

@section Styles {
    <link rel="stylesheet" href="~/css/category.css" type="text/css" />
}

<h1>Categories</h1>

@foreach (var item in Model)
{
    <div class="category">
        <img src="https://previews.123rf.com/images/victoroancea/victoroancea1201/victoroancea120100059/12055848-tv-color-test-pattern-test-card-for-pal-and-ntsc.jpg" alt="Test" class="categoryImg" />
        <p class="categoryText">@item.Name</p>
    </div>
}