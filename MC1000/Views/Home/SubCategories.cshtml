@model IEnumerable<MC1000.Models.Category>

@{
    ViewData["Title"] = @Model.First().Name;
}
<header>
    <img src="~/banners/categories/@Model.First().BannerImage" alt="Category Banner" class="BannerImg" id="home" style="max-width: 100%" />
</header>

<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <!-- Subcategory-->
        @foreach (var sub in Model.First().SubCategories)
        {
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">@sub.Name</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Grid Items-->
            <div class="row">
                <!-- subsub product Item -->
                @foreach (var subsub in sub.SubSubCategories)
                {
                    foreach (var product in subsub.Products)
                    {
                        <div class="col-md-6 col-lg-4 mb-5">
                            <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                                    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                        <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                                    </div>
                                    <img class="img-fluid" src="@product.Image" style="min-height: 332px; min-width: 332px" alt="Product afbeelding" />

                                    <bold>@product.Title</bold>
                                    <p>@product.ShortDescription</p>
                                </div>
                            </a>
                        </div>
                    }

                }
            </div>
            <hr />
        }
    </div>
</section>