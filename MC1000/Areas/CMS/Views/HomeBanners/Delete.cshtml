@model MC1000.Models.HomeBanner

@{
    ViewData["Title"] = "Verwijderen";
}

<h1>Verwijderen</h1>

<h3>Weet u zeker dat u dit wilt verwijderen?</h3>
<div>
    <h4>Home Banner</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bannerfoto Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dt class="col-sm-2">
            Afbeelding
        </dt>
        <dd class="col-sm-10">
            <!--Toont de bannerfoto-->
            <img src="~/banners/home/@Model.AfbeeldingUrl" width="100" height="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AfbeeldingUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AfbeeldingUrl)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index">Terug</a>
    </form>
</div>
