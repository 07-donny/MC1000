@model MC1000.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <!--Toont de bannerfoto-->
                @if (!string.IsNullOrEmpty(Model.BannerImage))
                {
                    <img src="~/banners/categories/@Model.BannerImage" width="100" height="100" />
                }
            </div>
            <div class="form-group">
                <label class="control-label">Afbeelding</label>
                <input type="file" name="Afbeelding" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

