@model MC1000.Models.Discount

@{
    ViewData["Title"] = "Verwijderen";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}

<h1>Verwijderen</h1>

<h3>Weet u zeker dat u dit wilt verwijderen?</h3>
<div>
    <h4>Korting</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nieuwe prijs
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscountedPrice)
        </dd>
        <dt class = "col-sm-2">
            Geldig tot
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValidUntil)
        </dd>
        <dt class = "col-sm-2">
            Aanbieding
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Promotion.Id)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EAN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EAN)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-area="CMS" asp-controller="Promotions" asp-action="Index">Terug</a>
    </form>
</div>
