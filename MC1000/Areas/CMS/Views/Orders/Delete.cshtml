@model MC1000.Models.Order

@{
    ViewData["Title"] = "Verwijderen";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}

<h1>Verwijderen</h1>

<h3>Weet u zeker dat u dit wilt verwijderen?</h3>
<div>
    <h4>Bestelling</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Datum geplaatst
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePlaced)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeSlot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeSlot.Id)
        </dd>
        <dt class="col-sm-2">
            Gebruiker
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index">Terug</a>
    </form>
</div>