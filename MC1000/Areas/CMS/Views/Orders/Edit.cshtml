@model MC1000.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}

<h1>Bewerken</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DatePlaced" class="control-label"></label>
                <input asp-for="DatePlaced" class="form-control" />
                <span asp-validation-for="DatePlaced" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Verwerken">Verwerken</option>
                    <option value="Bezorgen">Bezorgen</option>
                    <option value="Ophalen">Ophalen</option>
                    <option value="Afgerond">Afgerond</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlotId" class="control-label"></label>
                <select asp-for="TimeSlotId" class="form-control" asp-items="ViewBag.TimeSlotId"></select>
                <span asp-validation-for="TimeSlotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug</a>
</div>