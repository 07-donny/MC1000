@model IEnumerable<MC1000.Models.Discount>

@{
    ViewData["Title"] = "Kortingen";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}

<h1>Kortingen</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nieuwe prijs
            </th>
            <th>
                Geldig tot
            </th>
            <th>
                Aanbieding
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EAN)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountedPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidUntil)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EAN)
                </td>
                <td>
                    <a asp-area="CMS" asp-controller="Discounts" asp-action="Edit" asp-route-id="@item.Id">Bewerken</a> |
                    <a asp-area="CMS" asp-controller="Discounts" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-area="CMS" asp-controller="Discounts" asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a> |
                    <a asp-action="DiscountCreate" asp-route-promoid="">Maak nog een korting aan</a>
                </td>
            </tr>
        }
    </tbody>
</table>