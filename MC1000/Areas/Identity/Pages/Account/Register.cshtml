@page
@model RegisterModel
@{
    ViewData["Title"] = "Registreren";
}

<h1>@ViewData["Title"]</h1>
<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data" method="post">
                    <h4>Registreren</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>E-mail *</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Wachtwoord *</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Bevestig Wachtwoord *</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Telefoonnummer</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Straat</label>
                        <input asp-for="Input.Street" class="form-control" />
                        <span asp-validation-for="Input.Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Huis Nummer</label>
                        <input asp-for="Input.HouseNumber" class="form-control" />
                        <span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Postcode</label>
                        <input asp-for="Input.ZipCode" class="form-control" />
                        <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Stad</label>
                        <input asp-for="Input.City" class="form-control" />
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Land</label>
                        <input asp-for="Input.Country" class="form-control" />
                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Profiel Foto</label>
                        <input asp-for="Input.ImageUpload" type="file" class="form-control" />
                        <span asp-validation-for="Input.ImageUpload"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Registeer</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}